---
import { ViewTransitions, fade } from "astro:transitions";
import { SEO } from "astro-seo";
import { Icon } from "astro-icon";

const { title, description, modifiedTime, tags } = Astro.props;

const currentPath = Astro.url.pathname;

const routes: { path: string; title: string }[] = [
  { path: "/", title: "Home" },
  { path: "/post", title: "Posts" },
  { path: "/tag", title: "Tags" },
];

const socials: { name: string; url: string; icon: string }[] = [
  {
    name: "Mastodon",
    url: "https://mastodontech.de/@Jak2k",
    icon: "mdi:mastodon",
  },
  {
    name: "GitHub",
    url: "https://github.com/Jak2k",
    icon: "mdi:github",
  },
  { name: "RSS", url: "/rss.xml", icon: "mdi:rss" },
  {
    name: "Discord DM",
    url: "https://discord.com/users/599098199655055360",
    icon: "mdi:discord",
  },
];
---

<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      charset="utf-8"
      openGraph={{
        basic: {
          title,
          type: "website",
          image: "",
        },
        article: {
          modifiedTime,
          tags,
        },
        optional: {
          description,
          locale: "en_US",
        },
      }}
    />
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <ViewTransitions />
  </head>
  <body bg-white text-black dark:bg-black dark:text-white>
    <nav
      max-w-80ch
      m-x-auto
      m-y-5
      border-1
      border-gray-300
      dark:border-gray-700
      p-2.5
      rounded-2.5
      flex
      flex-row
    >
      {
        routes.map((r) => (
          <a href={r.path} class="m-r-2.5">
            {r.title}
          </a>
        ))
      }
      <span w-full></span>
      {
        socials.map((s) => (
          <a href={s.url} class="m-r-2.5" target="_blank">
            <Icon name={s.icon} height="1.5em" width="1.5em" inline />
          </a>
        ))
      }
    </nav>
    <article
      max-w-80ch
      m-x-auto
      m-t-30vh
      p-2.5
      m-y-5
      border-1
      border-gray-300
      dark:border-gray-700
      rounded-2.5
      transition:name="content"
    >
      <h1 text-5xl m-b-2.5 transition:name={`lnk-${currentPath}`}>
        {title}
      </h1>
      <slot />
    </article>

    <slot name="additional" />
  </body>
</html>
